

<!--CONTAINER PAGE -->
<div>
     <!--BANNER SUPERIOR -->
    <div class="w-full flex items-center pl-10 bg-cyan-600 text-white object-fill py-4">
      <p class="text-2xl leading-none">/carrito de compras</p>
    </div>

        <!--CONTAINER TABLA PRODUCTOS EN CARRITO -->
   
   <div class="flex flex-col px-10 pt-4 relative overflow-x-auto shadow-md sm:rounded-lg">
        <div>
            <table class="w-1/2 mx-auto text-sm text-left rtl:text-right text-blue-100 dark:text-blue-100">
                <!-- Ajusté el ancho de la tabla a w-1/2 (la mitad de la pantalla) y la centré con mx-auto -->

            <thead class="text-xs text-white uppercase bg-blue-600 border-b border-blue-400 dark:text-white">
            <tr>
                
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Producto
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Vendedor
                 <th scope="col" class="px-4 py-1 bg-blue-500">
                    Fecha de creacion
                </th>
                 <th scope="col" class="px-4 py-1 bg-blue-500">
                    Titulo
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Categoria
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Imagen
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Precio
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Stock
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Status
                </th>
                 <th scope="col" class="px-4 py-1 bg-blue-500">
                   Codigo
                </th>
                <th scope="col" class="px-4 py-1 bg-blue-500">
                    Acciones
                </th>
            </tr>
         </thead>
            <tbody>
            {{#each productsList}}
            <tr class="bg-white text-blue-500">
                <td class="px-4 py-1">
                    {{this.productId}}
                </td>
                <td class="px-4 py-1">
                    {{this.owner}}
                </td>
                <td class="px-4 py-1">
                    {{this.createdAt}}
                </td>
                <td class="px-4 py-1">
                    {{this.title}}
                </td>
                <td class="px-4 py-1">
                    {{this.category}}
                </td>
                <td class="px-4 py-1">
                    <div class="flex-shrink-0">
                        <img class="w-6 h-6 rounded-full" src={{this.img}}>
                        <!-- Ajusté el tamaño de la imagen con w-6 y h-6 -->
                    </div>
                </td>
                <td class="px-4 py-1">
                    {{this.price}}
                </td>
                <td class="px-4 py-1">
                    {{this.stock}}
                </td>
                <td class="px-4 py-1">
                    {{this.status}}
                </td>
                   <td class="px-4 py-1">
                    {{this.code}}
                </td>
                  <td class="px-4 py-1">
                    <button onclick="deleteProductFromCart('{{../currentUser.cartId}}','{{this.product.productId}}')">Eliminar del carrito</button>
                 </td>
            </tr>
            {{/each}}
           
        </tbody>
    </table>
   </div>
   
    </div>




        
    </div>
    

    <script>
        function checkoutCartFromClient(currentUserCartId){

            //Hacemos el fetch correspondiente y de acuerdo a su respuestan accionamos.
            fetch(`/api/carts/checkout/${currentUserCartId}`,{method: 'POST'})
            .then( response => {
                if (response.ok){
                    //Tomo los datos para dar un mensaje y redirigir 
                    response.json()
                    
                    .then(data => {
                    console.log(data)
                    Swal.fire({
                        title: 'Compra exitosa !',
                        text: `Tu compra se realizo con exito. Se enviaran los detalles a tu email. Se genero el ticket ${data.checkoutResult.ticket.code}.`,
                        icon: 'success',
                        confirmButtonText: 'Continuar',
                        allowOutsideClick: false, // No permitir cerrar al hacer clic fuera del diálogo
                        allowEscapeKey: false     // No permitir cerrar con la tecla Escape
                })
                .then((swalResult)=>{
                    //Se redirige a la vista del ticket con el correspodiente codigo.
                   // window.location.href = `/views/${data.checkoutResult.ticket.code}/purchase`
                   alert('ok') //aca redirijo al pago
                })

                    })
                }
                else{
                    //Muestro error con swal
                     response.json()
                    .then(data => {
                        Swal.fire({icon: 'error',title: 'Error en compra',text: data.message})
                    })
                }
            })
        }


        function deleteProductFromCart(currentUserCartId,productId){
            //router.delete('/carts/:cid/products/:pid',onlyAuthUsers,cartsController.deleteProductFromCart)
            //router.delete('/carts/:cid',onlyAuthUsers,cartsController.clearCart)
            fetch(`/api/carts/${currentUserCartId}/products/${productId}`,{method:'DELETE'})
            .then(res =>{
                if (res.ok){
                    res.json()
                    .then( data => {
                         Swal.fire({
                        title: 'OK !',
                        text: `${data.message}.`,
                        icon: 'success',
                        confirmButtonText: 'Continuar',
                        allowOutsideClick: false, // No permitir cerrar al hacer clic fuera del diálogo
                        allowEscapeKey: false     // No permitir cerrar con la tecla Escape
                })
                .then((swalResult)=>{
                   window.location.href = `/views/carts/${currentUserCartId}`
                  
                })
                    })
                }
                else{
                    alert('Problemas intentando eliminar el producto del carrito.')
                }
            })
        }



         function clearThisCart(currentUserCartId){
            //router.delete('/carts/:cid',onlyAuthUsers,cartsController.clearCart)
            fetch(`/api/carts/${currentUserCartId}`,{method:'DELETE'})
            .then(res =>{
                if (res.ok){
                    res.json()
                    .then( data => {
                         Swal.fire({
                        title: 'OK !',
                        text: `${data.message}.`,
                        icon: 'success',
                        confirmButtonText: 'Continuar',
                        allowOutsideClick: false, // No permitir cerrar al hacer clic fuera del diálogo
                        allowEscapeKey: false     // No permitir cerrar con la tecla Escape
                })
                .then((swalResult)=>{
                   window.location.href = `/views/carts/${currentUserCartId}`
                  
                })
                    })
                }
                else{
                    alert('Problemas intentando eliminar el producto del carrito.')
                }
            })
        }
    </script>